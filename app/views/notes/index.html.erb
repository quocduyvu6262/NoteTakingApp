
<h1>Notes</h1>

<br/>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th style="width:70%">Title</th>
      <th>Last Modified</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody >
    <% @notes.each do |note| %>
      <% if user_signed_in? and current_user.id == note.user_id %>
        <tr>
          <td><%= link_to note.title, edit_note_path(note), class:"text-dark text-decoration-none black" %></td>
          <td><%= note.updated_at%></td>
          <td><%= link_to 'Delete', note, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    <% end %>
    
  </tbody>


</table>

<br/>

<%= link_to "New note", new_note_path,  class:"btn btn-secondary" %>
